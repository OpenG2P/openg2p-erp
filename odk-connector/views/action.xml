<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--  Configuration Action  -->
    <record id="action_odk_configurations" model="ir.actions.act_window">
        <field name="name">Configurations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odk.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first Configuration!
            </p>
        </field>
    </record>

    <!--  Submission Action  -->
    <record id="action_odk_submission" model="ir.actions.act_window">
        <field name="name">Submission</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odk.submissions</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Submissions!
            </p>
        </field>
    </record>

</odoo>
