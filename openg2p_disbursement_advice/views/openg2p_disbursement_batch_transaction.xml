<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_openg2p_disbursement_new_batch" model="ir.ui.view">
            <field name="name">openg2p.disbursement.batch.transaction.form</field>
            <field name="model">openg2p.disbursement.batch.transaction</field>
            <field name="arch" type="xml">
                <form string="Batch Form">
                    <header>
                        <button name="action_confirm" type="object" states="draft" string="Confirm" class="oe_highlight"/>
                        <button name="action_pending" type="object" states="confirm" string="Approve Batch" class="oe_highlight"/>
                        <button name="action_transaction" type="object"  states="pending" string="Check status" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                         <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                         </div>
                        <group>
                            <group name="primary">
                                <field name="program_id" options="{'no_create_edit': True}"/>
                            </group>
                        </group>
                        <group name="secondary">
                            <label for="date_start" string="Period"/>
                            <div name="date">
                                <field name="date_start" class="oe_inline"/> - <field name="date_end"
                                                                                      class="oe_inline"/>
                            </div>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                            widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
    <record id="view_openg2p_disbursement_main_tree" model="ir.ui.view">
        <field name="name">openg2p.disbursement.batch.transaction.tree</field>
        <field name="view_mode">tree</field>
        <field name="model">openg2p.disbursement.batch.transaction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="program_id"/>
                <field name="state"/>
                <button name="action_confirm" string="Confirm" class="oe_highlight"/>
            </tree>
        </field>
    </record>
</odoo>