<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_openg2p_disbursement_configuration_form" model="ir.ui.view">
            <field name="name">openg2p.disbursement.configuration.form</field>
            <field name="model">openg2p.disbursement.configuration</field>
            <field name="arch" type="xml">
                <form string="Disbursement Configuration Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="bulk_transfer_url"/>
                                <field name="batch_summary_url"/>
                            </group>
                            <group>
                                <field name="tenant_name"/>
                                <field name="auth_url"/>
                                <field name="username"/>
                                <field name="password"/>
                                <field name="grant_type"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                            widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>