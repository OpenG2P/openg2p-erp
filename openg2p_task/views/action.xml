<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_openg2p_task" model="ir.actions.act_window">
        <field name="name">OpenG2P Tasks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">openg2p.task</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks here!
            </p>
        </field>
    </record>

    <record id="action_openg2p_task_history" model="ir.actions.act_window">
        <field name="name">OpenG2P Task History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">openg2p.task.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No history!
            </p>
        </field>
    </record>

</odoo>
