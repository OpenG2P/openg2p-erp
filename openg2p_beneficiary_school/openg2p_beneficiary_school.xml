    <!--tree view(list view)-->
    <record id="beneficiary_school_tree" model="ir.ui.view">
        <field name="name">openg2p.beneficiary_school.form</field>
        <field name="model">openg2p.beneficiary_school</field>
        <field name="arch" type="xml">
            <tree string="Beneficiaries">
                <field name="total_quality"/>
                <field name="total_equity"/>
                <field name="retention_progression"/>
                <field name="grand_total"/>
            </tree>
        </field>
    </record>

    <!--form view-->
    <record id="beneficiary_school_form" model="ir.ui.view">
        <field name="name">openg2p.beneficiary_school.form</field>
        <field name="model">openg2p.beneficiary_school</field>
        <field name="arch" type="xml">
            <form string="Beneficiaries">
                <sheet>
                    <group>
                        <group>
                            <field name="total_quality"/>
                            <field name="total_equity"/>
                        </group>
                        <group>
                            <field name="retention_progression"/>
                        </group>
                    </group>
                    <group>
                        <field name="beneficiary_name" ref="crm_case_form_view_beneficiary"/>
                        <field name="grand_total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--action-->
    <record model="ir.actions.act_window" id="action_beneficiary_school">
        <field name="name">Beneficiary School</field>
        <field name="res_model">openg2p.beneficiary_school</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first school beneficiary
            </p>
        </field>
    </record>

    <!--menu and submenu-->
    <menuitem id="openg2p.beneficiary_school_root" name="Beneficiary School" sequence="0"
              web_icon="openg2p_beneficiary_school,static/description/icon.png"/>
    <menuitem id="openg2p.beneficiary_school" name="Beneficiaries"
              parent="openg2p.beneficiary_school_root" action="action_beneficiary_school"/>

</odoo>